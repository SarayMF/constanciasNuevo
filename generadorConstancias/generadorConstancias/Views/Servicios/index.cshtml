﻿@{
    ViewBag.Title = "Constancias";
}

<div class="contenedor-principal">
    <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/Imagenes/itl-logo.jpg"   alt="" width="20">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Generar constancias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("consultar", "Servicios")">Consultar constancia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("capturar", "Servicios")">Capturar fechas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa fa-sign-out"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="center contenedor-generador">
        <div class="contenedor-buscar">

            <div class="input-group pull-right buscador">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search" aria-hidden="true"></i></span>
                <input type="text" class="form-control" name="noControl" id="noControl" placeholder="Numero de control" aria-label="noControl" aria-describedby="basic-addon1">
                <button class="btn btn-outline-primary" type="button" id="buscar">Buscar</button>
            </div>

            <br /><br /><br />
            <div class="center">
                <div class="alert alert-danger" role="alert">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    <strong>Error!</strong> el numero de control no se encuentra en la base de datos.
                </div>
            </div>
            <hr />
            
            <div class="contenedor-seleccion">
                <h5>Seleccione tipo de constancia:</h5>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipo" id="tipo1">
                    <label class="form-check-label" for="tipo1">
                        Sencilla
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipo" id="tipo2">
                    <label class="form-check-label" for="tipo2">
                        Con foto
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipo" id="tipo3">
                    <label class="form-check-label" for="tipo3">
                        Con promedio de los 2 ultimos semestres
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipo" id="tipo4">
                    <label class="form-check-label" for="tipo4">
                        Con promedio del ultimo semestre
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipo" id="tipo5">
                    <label class="form-check-label" for="tipo5">
                        Con promedio del ultimo semestre y promedio general
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipo" id="tipo6">
                    <label class="form-check-label" for="tipo6">
                        Con promedio del ultimo semestre y materias
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipo" id="tipo7">
                    <label class="form-check-label" for="tipo7">
                        Con promedio general
                    </label>
                </div>
            </div>

            <br />
            <div class="pull-right">
                <button class="btn btn-success">Generar</button>
                <button class="btn btn-danger">Cancelar</button>
            </div>

        </div>
    </div>
</div>